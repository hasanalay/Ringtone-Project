@model IEnumerable<User>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../modules/bootstrap/dist/css/bootstrap.min.css" />
</head>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td><a href="/Admin/DeleteUser/@user.Id" class="btn btn-danger">Delete</a></td>
                <td><a href="/Admin/UpdateUser/@user.Id" class="btn btn-success">Update</a></td>

            </tr>
        }
    </tbody>
    <a href="/Admin/AddUser" class="btn btn-primary">Add</a>
</table>
