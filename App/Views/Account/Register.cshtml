@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="../../modules/bootstrap/dist/css/bootstrap.min.css" />
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb=2 ">@ViewData["Title"]</h1>
    </div>
</div>
<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email@email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="P@ss!W0rd" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Repassword" class="form-label">Repassword</label>
                <input asp-for="Repassword" type="password" class="form-control" placeholder="P@ss!W0rd" />
                <span asp-validation-for="Repassword" class="text-danger small"></span>
            </div>
            <br />
            <div>
                <div class="form-group d-grid mb-3">
                    <button type="submit" class="btn btn-primary d-block">Register</button>
                </div>
        </form>
    </div>
</div>
