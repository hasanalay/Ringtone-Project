@model IEnumerable<Ringtone>

@foreach (var ringtone in Model)
{
    <div class="card mb-3">
        <div class="row no-gutter">
            <div class="col-md-3">
                <img src="~/img/@ringtone.Imageurl" alt="@ringtone.Artist" class="card-img">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@ringtone.Id"> @ringtone.Name</a>
                    </h5>
                    <p class="card-text">
                        @ringtone.Artist
                    </p>
                    <figure class="wp-block-audio alignright"><audio controls src="~/@ringtone.Audiourl" type="audio/mpeg"
                        controlsList="nodownload"></audio></figure>
                    <p class="card-text">
                        <small class="text-muted">3 days ago</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
}
