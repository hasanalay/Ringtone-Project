@model IEnumerable<Ringtone>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../modules/bootstrap/dist/css/bootstrap.min.css" />
</head>


<P>
<h2>PURCHASE SUCCESSFUL!</h2>
</P>
@foreach (var r in Model)
{

    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row no-gutter">
                                <div class="col-md-4">
                                    <img src="~/img/@r.Imageurl" alt="@r.Artist" class="card-img">
                                </div>
                                <div class="col-md-8">

                                    <h5 class="card-title">
                                        <a asp-action="Details" asp-controller="Home" asp-route-id="@r.Id"
                                        style="text-decoration: none;">
                                            @r.Name</a>
                                    </h5>
                                    <p class="card-text">
                                        @r.Details
                                    </p>
                                    <figure class="wp-block-audio alignright"><audio controls src="\audio\kitty-meow.mp3"
                                        type="audio/mpeg" controlsList="nodownload"></audio></figure>
                                    <p>

                                    <form method="get" action="~/audio/kitty-meow.mp3">
                                        <button type="submit">Download!</button>
                                    </form>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>
}


</html>