<div class="navbar navbar-expand-sm bg-secondary navbar-dark">
    <div class="container">

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/" class="navbar-brand">Ringtone App</a>

            <ul class="navbar-nav">
                <form asp-controller="Home" asp-action="Index">
                    <p>
                        <input placeholder="Search" type="text" name="SearchString" />
                        <input type="submit" value="Find" />
                    </p>
                </form>
                <li class="nav-item">
                    <a href="/Home/checkout" class="nav-link">Cart</a>
                </li>
                <li class="nav-item">
                    <a href="/Account/Logout" class="nav-link">Logout</a>
                </li>
                <a href="/Account/MyAccount" class="navbar-brand">@User.FindFirst(" ").Value.ToUpper()</a>
            </ul>

        }
        else
        {
            <a href="/" class="navbar-brand">Ringtone App</a>

            <ul class="navbar-nav">
                <form asp-controller="Home" asp-action="Index">
                    <p>
                        <input placeholder="Search" type="text" name="SearchString" />
                        <input type="submit" value="Find" />
                    </p>
                </form>
                <li class="nav-item">
                    <a href="/Account/Login" class="nav-link">Login</a>
                </li>

                <li class="nav-item">
                    <a href="/Account/Register" class="nav-link">Register</a>
                </li>
            </ul>
        }

    </div>
</div>